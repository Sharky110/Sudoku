<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game.ViewModels"
        xmlns:local2="clr-namespace:Game.Models"
        mc:Ignorable="d"
        Title="Sudoku" Height="600" Width="600">
    <Grid Height="480" Width="480" Margin="24">
        
        <Grid.Resources>
            
        </Grid.Resources>
        <TextBox Text="{Binding Path=CustomButton.Name}"></TextBox>
        <ItemsControl ItemsSource="{Binding Buttons}" >
            
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local2:CustomButton}" >
                    <Button Name="button" Content="{Binding Path=Name}" Height="50" Width="50"
                        TextBlock.FontSize="20"  Click="Button_Click" Background="{Binding Path=Color}">
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</Window>
