<Window x:Class="Game.MainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Title="Судоку" Height="600" Width="700" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lblSudoku" Content="СУДОКУ" Height="78" FontSize="48" FontWeight="Bold" Background="White" Foreground="#FFC90101" Margin="240,10,240,0" VerticalAlignment="Top"/>
        <Button x:Name="btnNewGame" Content="Новая игра" HorizontalAlignment="Center" Margin="0,148,0,0" VerticalAlignment="Top" Width="220" FontSize="36" Command="{Binding Path=NewGameCommand}"/>
    </Grid>

</Window>
